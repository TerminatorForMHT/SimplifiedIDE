[MASTER]
# Disable all checks by default
disable=all

[MESSAGES CONTROL]
# Enable PEP 8 related checks
enable=
    C0103,  # Invalid constant name
    C0111,  # Missing module docstring
    C0112,  # Empty docstring
    C0301,  # Line too long
    C0302,  # Too many lines in module
    C0321,  # More than one statement on a single line
    C0326,  # Bad whitespace
    C0330,  # Wrong hanging indentation before block
    C0331,  # Trailing whitespace
    C0333,  # Trailing comma
    C0411,  # Standard import should be placed before
    C0412,  # Imports from package should be grouped
    C0413,  # Import "X" should be placed at the top of the module
    C0414,  # Import alias does not start with lower case letter
    C0415,  # Import alias does not start with lower case letter
    C0416,  # Import alias should be used
    C0417,  # Import alias should not start with an underscore
    C1801,  # Do not use len(SEQUENCE) without a comparison to determine if a sequence is empty
    E1101,  # No member
    W0311,  # Bad indentation
    W0312,  # Mixed indentation
    W0401,  # Wildcard import
    W0406,  # Module import itself
    W0410,  # Import from wildcard import
    W0511,  # TODO found
    W0611,  # Unused import
    W0612,  # Unused variable
    W0613,  # Unused argument
    W0621,  # Redefining name
    W0622,  # Redefining built-in
    W0702,  # No exception type(s) specified
    W0703,  # Catching too general exception
    W0706,  # Not using the "with" statement properly
    W0718,  # Exception triggered by a conditional expression
    W1505,  # Using deprecated method

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=79

[DESIGN]
# Maximum number of arguments for function / method.
max-args=5

# Maximum number of attributes for a class (see R0902).
max-attributes=10

# Maximum number of boolean expressions in a if statement.
max-bool-expr=5

# Maximum number of branch for function / method body.
max-branches=12

# Maximum number of return / yield for function / method body.
max-returns=6

# Maximum number of locals for function / method body.
max-locals=15

# Maximum number of parents for a class (see R0901).
max-parents=7

# Maximum number of public methods for a class (see R0904).
max-public-methods=20

# Minimum number of public methods for a class (see R0903).
min-public-methods=2

[REPORTS]
# Set the output format. Available formats are text, parseable, colorized, json and msvs
output-format=text

[TYPECHECK]
# Telling pylint which modules to ignore during the type checking phase.
ignored-modules=

# Telling pylint which modules to ignore when they're found to be missing.
ignored-classes=

[LOGGING]
# Format style used to check logging format string. `new` is for str.format(), `old` is for % operator.
logging-format-style=old

